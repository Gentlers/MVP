    link(rel='stylesheet', href='css/explorar.css')
    link(rel='stylesheet', href='css/inicio.css')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    //- SEO
    meta(name='keywords', content='gento, ropa para hombres, asesoria de estilo, e-commerce, fashion')
    meta(name='description', content='Explora las mejores opciones para tu tipo de estilo, y observa las selecciones que ya hemos realizado. Tu puedes ser el siguiente en vivir la experiencia.')
    meta(name='author', content='Gento')
    //- OPEN GRAPH
    meta(property='og:title', content='GENTO - Explora selecciones')
    meta(property='og:description', content='Explora las mejores opciones para tu tipo de estilo, y observa las selecciones que ya hemos realizado. Tu puedes ser el siguiente en vivir la experiencia.')
