  body
    header
      #header-web-gento.navbar-fixed
        nav.black
          .nav-wrapper
            a.brand-logo(href='#!')
              img(src='img/inicio/header/logo.png', alt='')
            a.button-collapse.icono-button(href='#', data-activates='mobile-demo', onclick='buttonChange()')
              i.material-icons.icono menu
            ul.right.hide-on-med-and-down
              li
                a.active(href='/') INICIO
              if bol.valor == 1
                li
                  a(href='/explorar') EXPLORAR
              if bol.valor == 0
                li
                  a(href='/pronto') REGISTRO
              else
                li
                  a(href='/perfil') PERFIL
            ul#mobile-demo.side-nav.side-nav-content
              li
                a.active(href='/') INICIO
              if bol.valor == 1
                li
                  a(href='/explorar') EXPLORAR
              if bol.valor == 0
                li
                  a(href='/pronto') REGISTRO
              else
                li
                  a(href='/perfil') PERFIL
    main
      .row
        .explorar-a.center
          .explorar-1
            p REVISA
            p NUESTRA COLECCIÓN
            p DE PRENDAS
            p PARA TI
          .explorar-2
            .search-gento.valign-wrapper
              .col.l11.m11.s10
                input.input-gento(placeholder='BUSCA LO QUE NECESITAS', id='', type='search')
              .col.l1.m1.s2
                a(href='#')
                  i.small.material-icons.iconSearch search
      // NOTE: EXPLORER CLOTHES
      .row.explorar-clothes
        .explorar-b.center
          .explorar-3
            p EXPLORAMOS
            p PRENDAS QUE VAN
            p  CONTIGO
        .explorar-prendas
          each thing in data
            .col.l4.m6.s12
              .card.selections1
                .card-image.selections2.waves-effect.waves-block.waves-light
                  // NOTE: IMAGEN DE LA PRENDA NO MAYOR A 280PX DE WITH
                  img.activator.responsive-img(src='img/inicio/select/02.jpg')
                .card-content
                  span.card-title.card-title-size.activator.grey-text.text-darken-4
                    | #{thing.nombre}
                    i.material-icons.right more_vert
                  p
                    a S/. #{thing.pventa}
                .card-reveal
                  span.card-title.grey-text.text-darken-4
                    | #{thing.nombre}
                    | #{thing.marca.nombre}
                    i.material-icons.right close
                  // NOTE: ADD MORE INFORMATION OF THE CLOTHES
                  p
                    | #{thing.descripcion}
                  p.center
                    a.waves-effect.waves-light.btn.black.helvetica2(href='/comprar/#{thing._id}')
                      i.material-icons.right shopping_cart
                      | COMPRAR
          
      // NOTE: ULTIMAS COMPRAS
      .row.sell
        .explorar-d.center
          .explorar-4
            p ULTIMAS
            p  COMPRAS
        .carousel.carousel-sell.carousel-sell-css.valign-wrapper
          .carousel-item.item-sell.white-text.valign(href='#one!')
            .row.carousel-text
              .col.l4.m4.s12.carousel-item-1
                img(src='img/explorar/lastsell/02.png', alt='')
                p
                  b.helvetica3 CRISTIAN VALLE
                  br
                  |                   CLIENTE
              .col.l8.m8.s12.carousel-item-2
                p.helvetica3 BLAZER BROWN
                p.helvetica2
                  | ENVIADO A: SAN ISIDRO 
                  br
                  |                     MARCA: JOHN HOLDEN
                a.waves-effect.black.btn.helvetica2 PRECIO S/.170
          .carousel-item.item-sell.white-text.valign(href='#one!')
            .row.carousel-text
              .col.l4.m4.s12.carousel-item-1
                img(src='img/explorar/lastsell/02.png', alt='')
                p
                  b.helvetica3 CRISTIAN VALLE
                  br
                  |                   CLIENTE
              .col.l8.m8.s12.carousel-item-2
                p.helvetica3 BLAZER BROWN
                p.helvetica2
                  | ENVIADO A: SAN ISIDRO 
                  br
                  |                     MARCA: JOHN HOLDEN
                a.waves-effect.black.btn.helvetica2 PRECIO S/.170
          .carousel-item.item-sell.white-text.valign(href='#one!')
            .row.carousel-text
              .col.l4.m4.s12.carousel-item-1
                img(src='img/explorar/lastsell/02.png', alt='')
                p
                  b.helvetica3 CRISTIAN VALLE
                  br
                  |                   CLIENTE
              .col.l8.m8.s12.carousel-item-2
                p.helvetica3 BLAZER BROWN
                p.helvetica2
                  | ENVIADO A: SAN ISIDRO 
                  br
                  |                     MARCA: JOHN HOLDEN
                a.waves-effect.black.btn.helvetica2 PRECIO S/.170
