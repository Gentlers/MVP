doctype html
html
  head
    meta(charset='UTF-8')
    title Gento Login
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/login.css')
  body
    center
      img.img-logo(src='img/pronto/02.png', width='250', height='90')
    .wrapper
      form.login(action='/session', method='POST')
        center
          h5(style='color: white;') E-mail
        input(type='email', name='email', placeholder='Ingresar Correo')
        i.fa.fa-user
        center
          h5(style='color: white;') Contraseña
        input(type='password', name='password', placeholder='Ingresar conraseña')
        i.fa.fa-key
        tr
        //- input(type='submit', value='Enviar')
        
        button#botn
          i.spinner
          span.state Iniciar Sesion
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='js/login.js')
