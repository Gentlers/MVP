  body
    header
      #header-web-gento.navbar-fixed
        nav.black
          .nav-wrapper
            a.brand-logo(href='#!')
              img(src='img/inicio/header/logo.png', alt='')
            a.button-collapse.icono-button(href='#', data-activates='mobile-demo', onclick='buttonChange()')
              i.material-icons.icono menu
            ul.right.hide-on-med-and-down
              li
                a.active(href='/') INICIO
              if bol.valor == 1
                li
                  a(href='/explorar') EXPLORAR
              if bol.valor == 0
                li
                  a(href='/pronto') REGISTRO
              else
                li
                  a(href='/perfil') PERFIL
            ul#mobile-demo.side-nav.side-nav-content
              li
                a.active(href='/') INICIO
              if bol.valor == 1
                li
                  a(href='/explorar') EXPLORAR
              if bol.valor == 0
                li
                  a(href='/pronto') REGISTRO
              else
                li
                  a(href='/perfil') PERFIL
    main
      .row.container.perfil
        .col.l5.m4.s12.center
          .perfil-foto
            .image-upload
              label.tooltipped(for='file-input', data-position='top', data-delay='50', data-tooltip='Cambiar Foto')
                img.image-circle(src='https://trello-attachments.s3.amazonaws.com/58b0e65ec68db29238e35e29/600x600/da0a8ebd586099600e806efdf3abae31/avagento.png', alt='')
              input#file-input(type='file')
        .col.l7.m8.s12.perfil-text.center
          p
            | ¡Bienvenido a Gento, 
            span #{user.username}
            | !
          p
            | Modifica aspectos de tu perfil, así Gento aprenderá más sobre ti y te dará recomendaciones más precisas.
          hr
      .row.container.preferencias
        .botones
          form(action='/logout', method='POST')
            .row.top-space
              .col-xs-12.col-md-6
                input.btn.btn-info.btn-close(type='submit', value='Cerrar Sesion')
          button.btn.btn-edicion Editar Estilos y Tallas
        #edicion
          h4.heletica3 Preferencias
          form(action='/update', method='POST')
            .row
              .col.l3.m4.s12
                .preferencias-prenda
                  img(src='http://i51.twenga.com/moda/camisas/ralph-lauren-camisa-azul-tp_3915612622791642398f.jpg', alt='')
                br
                .input-field.col.s12
                  select.icons(name='talla_camisa')
                    option(value='', disabled='') TALLA
                    - tallas_camisa = ["S","M","L","XL"]
                    for item in tallas_camisa
                      if user.tallas[0] == item
                        option.left.circle(value='#{item}', selected='true') #{item}
                      else
                        option.left.circle(value='#{item}') #{item}
                br
                br
                .input-field.col.s12
                  select.icons(name='entalle_camisa')
                    option(value='', disabled='', selected='') ENTALLE
                    - entalles_camisa = ['modern','normal','slim']
                    for item in entalles_camisa
                      if user.entalle[0] == item
                        option.left.circle(value='#{item}', selected='true') #{item} fit
                      else
                        option.left.circle(value='#{item}') #{item} fit
              .col.l3.m4.s12
                .preferencias-prenda
                  img(src='http://static.kiabi.es/images/pantalon-chino-regular-de-sarga-elastica-marino-hombre-tz476_2_lpr1.jpg', alt='')
                br
                .input-field.col.s12
                  select.icons(name='talla_pantalon')
                    option(value='', disabled='', selected='') TALLA
                    - tallas_pantalon = ['28','30','32','34']
                    for item in tallas_pantalon
                      if user.tallas[1] == item
                        option.left.circle(value='#{item}', selected='true') #{item}
                      else
                        option.left.circle(value='#{item}') #{item}
                br
                br
                .input-field.col.s12
                  select.icons(name='entalle_pantalon')
                    option(value='', disabled='', selected='') ENTALLE
                    - entalles_pantalon = ['recto','skinny','slim']
                    for item in entalles_pantalon
                      if user.entalle[1] == item
                        option.left.circle(value='#{item}', selected='true') #{item} fit
                      else
                        option.left.circle(value='#{item}') #{item} fit
              .col.l3.m4.s12
                .preferencias-prenda
                  img(src='https://http2.mlstatic.com/S_439411-MLV20565825385_012016-Y.jpg', alt='')
                br
                .input-field.col.s12
                  select.icons(name='talla_polo')
                    option(value='', disabled='', selected='') TALLA
                    - tallas_polo = ['S','M','L','XL']
                    for item in tallas_polo
                      if user.tallas[2] == item
                        option.left.circle(value='#{item}', selected='true') #{item}
                      else
                        option.left.circle(value='#{item}') #{item}
                br
                br
                .input-field.col.s12
                  select.icons(name='entalle_polo')
                    option(value='', disabled='', selected='') ENTALLE
                    - entalles_polo = ['modern','normal','slim']
                    for item in entalles_polo
                      if user.entalle[2] == item
                        option.left.circle(value='#{item}', selected='true') #{item} fit
                      else
                        option.left.circle(value='#{item}') #{item} fit
              .col.l3.m4.s12
                .preferencias-prenda
                  img(src='https://s-media-cache-ak0.pinimg.com/736x/8e/78/ab/8e78abe5ffdd8384d813db755cdcc420.jpg', alt='')
                br
                .input-field.col.s12
                  select.icons(name='talla_zapato')
                    option(value='', disabled='', selected='') TALLA
                    - tallas_zapato = ['38','40','42','44']
                    for item in tallas_zapato
                      if user.tallas[3] == item
                        option.left.circle(value='#{item}', selected='true') #{item}
                      else
                        option.left.circle(value='#{item}') #{item}
                br
                br
            br
            br
            br
            br
            .row
              - estilos = [0.2,0.4,0.6,0.8,1]
              - stars = ['*','**','***','****','*****']
              .col.s6.m4
                .input-field.enter-size-item-1-a.center
                          p FORMAL
                          img.img-estilo(src='/img/registro/estilos/01.png')
                          select(name='estilo_formal')
                            
                            option(value='', disabled='', selected='') Dale un valor segun estilo:
                            - cont = 0
                            each item in estilos
                              if item == user.estilo[0]
                                option(value=item, selected='true')= stars[cont]
                              else
                                option(value=item)= stars[cont]
                              - cont = cont+1  

                            //- option(value=0.2) *
                            //- option(value=0.4) **
                            //- option(value=0.6) ***
                            //- option(value=0.8) ****
                            //- option(value=1.0) *****
              .col.s6.m4
                .input-field.enter-size-item-1-a.center
                          p CASUAL
